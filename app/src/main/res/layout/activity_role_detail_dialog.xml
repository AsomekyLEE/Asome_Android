<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="#ffffff"
    tools:context=".Project.RoleDetailDialogActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="팀원 역할 지정이 필요합니다."
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <AutoCompleteTextView
                    android:id="@+id/test_tag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="이름"
                    tools:layout_editor_absoluteX="93dp"
                    tools:layout_editor_absoluteY="237dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="시작일" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="setStartDateClicked"
                        android:text="▼" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="마감일"
                        android:gravity="center"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="▼"
                        android:onClick="setEndDateClicked"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/datePage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D5D5D5"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <DatePicker
                        android:layout_gravity="center"
                        android:id="@+id/datePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="3"
                        android:addStatesFromChildren="false"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        android:duplicateParentState="false"
                        android:fadeScrollbars="false"
                        android:theme="@android:style/Theme.Holo.Light" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="select"
                        android:onClick="onDateSelectClickd"/>

                </LinearLayout>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:onClick="userUploadClicked"
                    android:text="@android:string/ok"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="8dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/resultUser"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="이름"
                    android:gravity="right"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="#BDBDBD"
                    android:textColor="#111111"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/resultStartDay"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="시작일"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="#BDBDBD"
                    android:textColor="#111111"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/resultEndDay"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="마감일"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:background="#BDBDBD"
                    android:textColor="#111111"
                    android:visibility="gone"/>
            </LinearLayout>



            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onBackClicked"
                android:text="추가" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>