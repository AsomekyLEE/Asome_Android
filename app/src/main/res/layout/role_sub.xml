<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rolePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/test_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="이름"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="237dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="시작일" />

            <Button
                android:id="@+id/setStartBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:text="▼" />

            <TextView
                android:id="@+id/textEnd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="마감일"
                android:textSize="15sp" />

            <Button
                android:id="@+id/setEndBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="▼" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/datePage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5D5D5"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="시작일을 설정해주세요"
                android:textColor="#000000" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:addStatesFromChildren="false"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:duplicateParentState="false"
                android:fadeScrollbars="false"
                android:theme="@android:style/Theme.Holo.Light" />

            <Button
                android:id="@+id/selectBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="select" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/datePage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5D5D5"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="마감일을 설정해주세요"
                android:textColor="#000000" />

            <DatePicker
                android:id="@+id/datePicker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:addStatesFromChildren="false"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:duplicateParentState="false"
                android:fadeScrollbars="false"
                android:theme="@android:style/Theme.Holo.Light" />

            <Button
                android:id="@+id/selectBtn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="select" />

        </LinearLayout>

        <Button
            android:id="@+id/showBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:text="@android:string/ok" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultUser"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:background="#BDBDBD"
                android:gravity="right"
                android:padding="5dp"
                android:text="이름"
                android:textColor="#111111"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/resultStartDay"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="#BDBDBD"
                android:padding="5dp"
                android:text="시작일"
                android:textColor="#111111"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/resultEndDay"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="#BDBDBD"
                android:padding="5dp"
                android:text="마감일"
                android:textColor="#111111"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>